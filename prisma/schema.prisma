// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @default(uuid()) @id
  login       String
  password    String
  version     Int         @default(1)
  createdAt   Float
  updatedAt   Float
}

model Artist {
  id          String      @default(uuid()) @id
  name        String
  grammy      Boolean
}

model Track {
  id          String      @default(uuid()) @id
  name        String
  artistId    String?
  albumId     String?
  duration    Int
}

model Album {
  id          String      @default(uuid()) @id
  name        String
  year        Int
  artistId    String?
}

model FavoriteArtist {
  id          String      @id
}

model FavoriteAlbum {
  id          String      @id
}

model FavoriteTrack {
  id          String      @id
}